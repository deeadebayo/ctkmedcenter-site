---
import Seo from "../components/Seo.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const pathname = Astro.url.pathname, 
{pageTitle} = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <Seo title={pageTitle}/>
  </head>
  <body>
    <Header pathname={pathname} />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
